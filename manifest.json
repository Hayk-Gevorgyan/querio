{
  "manifest_version": 3,
  "name": "Querio",
  "version": "1.0.0",
  "devtools_page": "devtools.html",
  "permissions": [
    "storage",
    "background",
    "clipboardRead",
    "clipboardWrite"
  ],
  "host_permissions": [
    "http://*/*", 
    "https://*/*"
  ],
  "background": {
    "service_worker": "src/service-worker.ts"
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/16.png",
      "24": "icons/24.png",
      "32": "icons/32.png"
    }
  }
}